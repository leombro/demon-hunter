<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_accent_a200"
            android:textStyle="italic"
            android:textSize="24sp"
            android:layout_margin="5dp"
            android:id="@+id/card_view_title"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:textSize="18sp"
            android:id="@+id/card_view_text"
            android:layout_below="@id/card_view_title"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_view_btnpos"
            style="?android:attr/borderlessButtonStyle"
            android:layout_alignRight="@+id/card_view_text"
            android:layout_alignEnd="@+id/card_view_text"
            android:layout_below="@id/card_view_text"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_view_btnneg"
            style="?android:attr/borderlessButtonStyle"
            android:layout_below="@+id/card_view_text"
            android:layout_toLeftOf="@+id/card_view_btnpos"
            android:layout_toStartOf="@+id/card_view_btnpos" />

    </RelativeLayout>
</android.support.v7.widget.CardView>