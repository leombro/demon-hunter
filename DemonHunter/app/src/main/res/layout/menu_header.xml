<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:id="@+id/navbar_frame"
    android:elevation="3dp">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/velvetroom"
        android:alpha="0.5"
        android:id="@+id/navbar_back"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/protagonist_closeup"
        android:id="@+id/navbar_protagonist"
        android:layout_gravity="right|bottom" />

    <LinearLayout android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="left|bottom">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SOLDI"
            android:textStyle="bold"
            android:id="@+id/navbar_name"
            android:textColor="@color/white"
            android:layout_marginRight="5sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SOLDI"
            android:textStyle="bold"
            android:id="@+id/navbar_money"
            android:textColor="@color/white"
            android:layout_marginRight="5sp"
            />
        <LinearLayout android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QUASI TUTTI"
                android:id="@+id/navbar_demoncaught"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginRight="5sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/ TUTTI"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/navbar_demoncaught_max"
                android:layout_marginRight="5sp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>